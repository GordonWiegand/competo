library(ggplot2)

rm(list=ls())

dh <- read.table("/Volumes/hd2/130100_competo2/out_h.csv")$x
du <- read.table("/Volumes/hd2/130100_competo2/out_u.csv")$x
dv <- read.table("/Volumes/hd2/130100_competo2/out_v.csv")$x

d <- as.data.frame(cbind(1:length(dh),dh,du,dv))
colnames(d) <- c("i","HH","U","V")

d <- subset(d, i>1, select=i:V)
d$i <- d$i * 20

jpeg("/Volumes/hd2/130100_competo2/plot_t_a.jpg")
  ggplot(d, aes(i)) + geom_line(aes(y=HH,colour = "HH"))+
  geom_line(aes(y=U,colour = "U"))+
  geom_line(aes(y=V,colour = "V"))+
  xlab("Stichprobengroesse")+
  ylab("Konfidenzbereich in Prozent") +
  labs(colour='Legende') 
dev.off()


d2 <- d[1:50,]
jpeg("/Volumes/hd2/130100_competo2/plot_t_a2.jpg")
  ggplot(d2, aes(i)) + geom_line(aes(y=HH,colour = "HH"))+
  geom_line(aes(y=U,colour = "U"))+
  geom_line(aes(y=V,colour = "V"))+
  xlab("Stichprobengroesse")+
  ylab("Konfidenybereich in Prozent") +
  labs(colour='Legende') 
dev.off()



d2 <- d[1:100,]
  jpeg("/Volumes/hd2/130100_competo2/plot_t_a3.jpg")
  ggplot(d2, aes(i)) + geom_smooth(aes(y=HH,colour = "HH"))+
  geom_smooth(aes(y=U,colour = "U"))+
  geom_smooth(aes(y=V,colour = "V"))+
  xlab("Stichprobengroesse")+
  ylab("Konfidenzbereich in Prozent") +
  labs(colour='Legende') 
dev.off()


d2 <- d[15:200,]
  jpeg("/Volumes/hd2/130100_competo2/plot_t_a4.jpg")
  ggplot(d2, aes(i)) + geom_smooth(aes(y=HH,colour = "HH"))+
  geom_smooth(aes(y=U,colour = "U"))+
  geom_smooth(aes(y=V,colour = "V"))+
  xlab("Stichprobengroesse")+
  ylab("Konfidenzbereich in Prozent") +
  labs(colour='Legende') 
dev.off()


d2 <- d[15:150,]
  jpeg("/Volumes/hd2/130100_competo2/plot_t_a4.jpg")
  ggplot(d2, aes(i)) + geom_smooth(aes(y=HH,colour = "HH"))+
  geom_smooth(aes(y=U,colour = "U"))+
  geom_smooth(aes(y=V,colour = "V"))+
  xlab("Stichprobengroesse")+
  ylab("Konfidenzbereich in Prozent") +
  labs(colour='Legende') 
dev.off()



write.table(d,"/Volumes/hd2/130100_competo2/boot_out.csv")


plot(1:10)

d2 <- d[15:150,]
  jpeg("/Volumes/hd2/130100_competo2/plot_t_a9.jpg")
  ggplot(d2, aes(i)) + geom_line(aes(y=HH,colour = "HH"))+
  geom_line(aes(y=U,colour = "U"))+
  geom_line(aes(y=V,colour = "V"))+
  xlab("Stichprobengroesse")+
